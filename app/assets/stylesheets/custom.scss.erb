@import url('https://fonts.googleapis.com/css?family=Questrial|Playfair+Display&display=swap');

$light-shades: #F4F3EF;
$light-accent: #85A394;
$dark-accent: #9C712E;
$dark-shades: #1C2826;

$brand-color: #5FC10C;
$brand-color-hover: #6fc724;
$brand-color-dark: #55ad0a;
$brand-color-light: #8fd354;
$brand-color-white: #EFF8E6;
$brand-color-black: #132602;

$christmas-color: #c64041;
$christmas-color-light: #cd5859;
$christmas-secondary-color: #165b33;

$twitter-color: #00acee;

$like-color: #c73b31;
$like-color-light: #aa544e;

$contribution-color-zero: rgb(235, 237, 240);
$contribution-color-one: rgb(123, 201, 111);
$contribution-color-more: rgb(25, 97, 39);

.navbar{
  background-color: $brand-color;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
  height: 56px;

  .navbar-brand{
    font-size: 1rem;
    margin-right: 0;
  }

  .navbar-nav{
    margin-left: auto;
    margin-right: 0;
    .nav-link{
      color: #f0f0f0;
      font-size: 1rem;
      &:hover{
        color: #fff;
      }
    }
  }

  .navbar-center{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -2px;
  }

  .dropdown-menu{
    background-color: $brand-color;
    position: absolute;
    right: 0;
    left: auto;
  }

  .dropdown-item{
    background-color: $brand-color;
    &:hover{
      background-color: $brand-color-hover;
    }
    &:active{
      background-color: $brand-color-hover;
    }
  }

  .mode-nav{
    font-size: 1.4rem;
    box-sizing: border-box;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);

    li{
      padding-right: 1rem;

      a{
        color: white;
        &:hover{
          color: $brand-color-white;
          transition-duration: 0.2s;
        }
      }
    }

  }

  #navbarNav{
    margin-left: auto;
    margin-right: 0px;
    position: inherit;
    #navbarDropdownMenuLink{
      text-align: right;
      padding-right: 0;
    }
  }

  #badgeUnreadNotifications{
    font-size: small;
    color: #fff;
    background-color: $brand-color-dark;
  }
}

@media screen and (max-width: 575px){
  .navbar{
    #navbarNav{
      position: absolute;
      right: 8px;
      top: 0;
      #navbarDropdownMenuLink{
        text-align: right;
        padding-right: 0.5rem;
      }
    }

    .dropdown-menu{
      transform: none;
    }
  }

  .timestamp{
    display: none;
  }

  .landing{
    margin: 60px 0 0 0 !important;

    h1{
      margin-bottom: 1rem !important;
    }
  }
}

@media screen and (max-width: 768px){
  .nuita-form{
    width: 95%;
    margin: 0 auto;
  }
}

