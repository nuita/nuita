}

.side-section{
  padding: 10px 10px 10px 10px;
  margin-top: 30px;
  top: 77px;
  border-radius: 10px;
  background-color: #fcfcfc;

  .usericon{
    float: left;
    margin-right: 10px;
  }

  .screen_name{
    color: $dark-accent;
    padding-bottom: 0.4rem;
  }

  h3{
    margin: 2px 0px 0px 0px;
  }

  h3.handle_name{
    font-size: 1.25rem;
    padding: 0px;
  }

  a{
    text-decoration: none;
    color: inherit;
  }

  .badge-brand{
    background-color: $brand-color;
    color: #fff;
    font-size: 1rem;

    &:hover{
      background-color: $brand-color-hover;
    }
  }

  .badge-brand.active{
    background-color: #fff;
    color: $brand-color;
    position: relative;

    &:after{
      border: 1px solid $brand-color;
      content: '';
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      display: block;
      border: 2px solid $brand-color;
      border-radius: 10rem;

      &:hover{
        background-color: #fff;
        color: $brand-color-light;
        border: 2px solid $brand-color-light;
      }
    }
  }

  .list-group-item{
    background-color: #fcfcfc;
    padding: 0.25rem 0;
    border: none;
    &:hover{
      color: #132602;
      transition: 0.2s;
    }
  }

  .user_links{
    clear: both;
    a{
      text-decoration: none;
      color: $brand-color;
    }
    i{
      color: $dark-shades;
    }
    box-sizing: border-box;
    padding-left: 0px;
  }
}

.handle_name{
  padding-right: 5px;
  a {
    text-decoration: none;
    color: $dark-shades;
  }
}

.screen_name{
  font-size: 12px;
  font-weight: normal;
  font-family: "Questrial", sans-serif;
  color: $dark-accent;

  a{
    text-decoration: none;
    color: $dark-accent;
  }
}

.timestamp{
  font-size: x-small;
  padding-top: 10px;
  color: #aaaaaa;
  float: right;
}

.flash-container{
  padding-top: 1rem;
  padding-bottom: 0px;
  margin-bottom: 0px;
}

.label-muted{
  background-color: #eee;
  color: #999;
  font-size: small;
  padding: 0.25rem;
  border-radius: 0.3rem;
}

.badge-tag{
  background-color: #fcfcfc;
  border: 1px solid $brand-color;
  color: $brand-color;
  a{
    color: inherit;
    text-decoration: none;
  }
}

.badge-tag.active{
  background-color: $brand-color;
  color: #fff;
  a{
    color: inherit;
    text-decoration: none;

    .delete_icon{
      color: $brand-color-light;
      &:hover{
