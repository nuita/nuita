/* contribution graph */
.table-contribution{
  font-size: x-small;
  margin: 0 auto;
  border-collapse: separate;
  border-spacing: 1px;

  td{
    width: 1.5rem;
    height: 1.5rem;
    margin: 0px;
    padding: 0px;
    border: 2px solid #fcfcfc;
    background-color: $contribution-color-more;

    a{
      width: 100%;
      height: 100%;
      display: block;
    }

    &:hover{
      border: 2px;
    }
  }
  td.val-1{
    background-color: $contribution-color-one;
  }
  td.val-0{
    background-color: $contribution-color-zero;
    &:hover{
      border: 2px solid #fcfcfc;
    }
  }

  td.christmas{
    height: 2rem;
    background-color: $christmas-color;
    color: #fff;

    &:hover{
      border: 2px solid #fcfcfc;
    }

    .day{
      font-size: large;
      font-family: 'Playfair Display', serif;
      font-weight: bold;
      text-align: center;
      vertical-align: middle;
    }
  }

  td.christmas.val-0{
    background-color: #bbb;
    color: $dark-shades;
  }

  td.christmas.not-yet{
    background-color: #ddd;
    color: #aaa;
  }

  td.christmas.today{
    border-color: $christmas-secondary-color;
  }

  td.active{
    border: 4px;
  }

  tr{
    margin: 0;
  }
}

