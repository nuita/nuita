/* contribution graph */
.contribution-graph {
  $cell-width: 20px;
  $cell-border: 2px;
  $cell-border-width: $cell-border * 2;
  $min-cell-width: 16px;

  display: grid;
  margin: 0 auto;

  @include media-breakpoint-down(sm) {
    grid-template-rows: repeat(7, minmax($min-cell-width, 1fr));
    max-width: ($cell-width + $cell-border-width) * 12;
    grid-auto-flow: column;
  }

  @include media-breakpoint-up(md) {
    grid-template-columns: repeat(7, minmax($min-cell-width, 1fr));
    max-width: ($cell-width + $cell-border-width) * 7;
  }

  .cell {
    padding-top: calc(100% - #{$cell-border-width});

    border: $cell-border solid #fcfcfc;
    background-color: $contribution-color-more;

    position: relative;

    a {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    &:not(.val-0):hover,
    &.active {
      border-width: 0;
    }

    &.val-1 {
      background-color: $contribution-color-one;
    }

    &.val-0 {
      background-color: $contribution-color-zero;
    }
  }
}

