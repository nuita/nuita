$contribution-color-more: rgb(25, 97, 39);

$graybtn-color: #ddd;
$graybtn-color-hover: #bbb;

$header-height: 56px;

.navbar {
  background-color: #fcfcfc;
  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  height: $header-height;

  .navbar-brand {
    font-size: 1rem;
    margin-right: 0;
  }

  .navbar-nav {
    margin-left: auto;
    margin-right: 0;

    .nav-link {
      color: $brand-color;
      font-size: 1rem;

      &:hover {
        color: $brand-color-hover;
        transition: 0.2s;
      }
    }
  }

  .navbar-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -2px;
  }

  .dropdown-menu {
    color: #000;
    position: absolute;
    right: 0;
    left: auto;
  }

  .dropdown-item {
    background-color: #fff;

    .nav-link {
      color: #000;

      &:hover {
        color: $brand-color-dark;
      }

      &:active {
        color: $brand-color;
      }
    }
  }

  .mode-nav {
    font-size: 1.4rem;
    box-sizing: border-box;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);

    li {
      padding-right: 1rem;

      a {
        color: $graybtn-color;

        &:hover {
          color: $graybtn-color-hover;
          transition-duration: 0.2s;
        }
      }
    }

    li.active {
      a {
        color: $brand-color;

        &:hover {
          color: $brand-color-hover;
        }
      }
    }
  }

  #navbarNav {
    margin-left: auto;
    margin-right: 0px;
    position: inherit;

    #navbarDropdownMenuLink {
      text-align: right;
      padding-right: 0;
      color: #ddd;
    }
  }

  #badgeUnreadNotifications {
    font-size: small;
    color: #fff;
    background-color: $brand-color;
  }

  transition: transform 0.1s;
}

.navbar-faded-out {
  transform: translateY(-$header-height);
}

@media screen and (max-width: 575px) {
  .navbar {
    #navbarNav {
      position: absolute;
      right: 8px;
      top: 0;

      #navbarDropdownMenuLink {
        text-align: right;
        padding-right: 0.5rem;
      }
    }

    .dropdown-menu {
      transform: none;
    }
  }

  .timestamp {
    display: none;
  }

  .landing {
    margin: 60px 0 0 0 !important;

    h1 {
      margin-bottom: 1rem !important;
    }
  }
}

