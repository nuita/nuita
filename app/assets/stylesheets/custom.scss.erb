    font-size: small;
    text-align: right;
    color: $dark-accent;
  }

  .nweets-list {
    list-style: none;
    padding: 0px 0rem 0px 1rem;
  }

  .nweet {
    padding: 15px 0px 0px 0px;
    margin-right: 10px;
    display: block;
    border-bottom: 1px solid #eee;

    .content {
      font-size: normal;
      padding-bottom: 5px;
    }

    .quote {
      box-sizing: border-box;
      word-break: break-all;
      padding-left: 0.4rem;
      box-sizing: border-box;
      font-style: italic;
      color: #444;
      border-left: 1px solid $brand-color-light;
    }

    .nweet-bottom {
      margin-bottom: 0px;
      margin-top: 0.5rem;
      padding: 0;
      color: #aaaaaa;
      overflow: hidden;

      .like-btn {
        margin: 0;

        a.btn {
          color: #aaa;

          &:hover {
            color: $like-color;
          }

          &:focus {
            outline: none;
            box-shadow: none;
          }

          padding-left: 0;
        }

        .btn.liked {
          color: $like-color;

          &:hover {
            color: $like-color-light;
          }
        }

        #likeFlash {
          font-size: small;
          color: $like-color;
        }

        #latestLikedTime {
          font-size: small;
        }
      }

      .text-right {
        line-height: 1rem;
      }

      .btn {
        outline: none;
        box-shadow: none;
      }
    }

    .maincontent {
      padding-bottom: 5px;
    }

    .user_info {
      margin-top: 5px;
      margin-bottom: 5px;
      border-bottom: $light-accent, 1px, solid;
      display: block;
      font-weight: bold;
    }

    .usericon {
      float: left;
      margin-right: 1em;
      margin-top: 5px;

      img {
        width: 100%;
        object-fit: cover;
      }
    }

    a.nweet-delete {
      color: $graybtn-color;

      &:hover {
        transition: all 0.2s;
        color: $graybtn-color-hover;
      }
    }
  }
}

